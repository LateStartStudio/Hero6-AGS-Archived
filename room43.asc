function hotspot5_a() {
  // script for Hotspot 5 (Hotspot 5): Interact hotspot
  
  if (flags.TowerRiddles == 0) {
		flags.TowerRiddles = 1;  
		cEgo.Walk(154, 192, eBlock, eWalkableAreas);
    InitializeRiddles();
  }
	else if (flags.TowerRiddles >= 7) {
	  cEgo.ChangeRoom(44, -20, 224);
	}
  
}
