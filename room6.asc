    DisplayMessage(524);
    return;
  }
  cEgo.Walk(122, 182,eBlock,eWalkableAreas);

  if (isDaytime()) cEgo.ChangeRoom(15,310,185);
  else Display("The sheriff has locked up tight his office for the night. Nobody will disturb his dreams of justice. NOBODY!");   
}

