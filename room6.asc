function postFade() {  // script for Room: Player enters room (after fadein)
  if (flags.Chapter > 0 && flags.MobOccuring != 1) PlayMusic(10);

  if (flags.Chapter == 2 && flags.MobOccuring == 1) {
    DisplayMessage(15);
    cEgo.ChangeRoom(4, 3, 180);
  }
  
}

function preFade() {  
